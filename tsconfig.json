{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/client",
    "strict": true,
    "types": ["vite/client"],
    "isolatedModules": true,
    "noEmit": true,                 
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"             
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
