{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Fullstack Vite + Node API",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator"
    ],
    "moduleResolution": "Node16",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
